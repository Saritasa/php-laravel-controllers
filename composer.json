{
    "name": "saritasa/laravel-controllers",
    "type": "library",
    "description": "Saritasa controllers for typical operations",
    "keywords": ["laravel", "api", "restful"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Populov",
            "email": "sergey@saritasa.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "laravel/framework": "^9.0 | ^10.0",
        "laravel/ui": "^4.0",
        "saritasa/laravel-fluent-validation": "^1.3",
        "tymon/jwt-auth": "^2.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.1",
        "phpunit/phpunit": ">=9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "minimum-stability": "beta",
    "prefer-stable" : true,
    "autoload": {
        "psr-4" : {
            "Saritasa\\LaravelControllers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "Saritasa\\LaravelControllers\\Tests\\": "tests/" }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev"
        },
        "laravel": {
            "providers": [
                "Saritasa\\LaravelControllers\\ControllersServiceProvider"
            ]
        }
    }
}
